        //                     sleep 5
        //                     NGROK_URL=$(curl -s localhost:4040/api/tunnels | jq -r '.tunnels[0].public_url')
        //                     echo "Testing endpoint: ${NGROK_URL}/predict"
                            
        //                     # Run test cases
        //                     curl -X POST "${NGROK_URL}/predict" \
        //                         -H "Content-Type: application/json" \
        //                         -d '{"text":"Great content!"}'
                            
        //                     # Verify response format
        //                     curl -s "${NGROK_URL}/healthcheck" | grep -q "Model Loaded"
                            
        //                     # Save URL for artifact
        //                     echo "Public Test URL: ${NGROK_URL}" > ngrok_url.txt
        //                 '''
        //             }
                    
        //             // 3. Load test results
        //             def NGROK_URL = readFile('ngrok_url.txt').trim()
        //             currentBuild.description = "Public Test URL: ${NGROK_URL}"
        //         }
        //     }
        //     post {
        //         always {
        //             sh 'pkill ngrok || true'
        //             archiveArtifacts artifacts: 'ngrok.log,ngrok_url.txt', fingerprint: true
        //         }
        //     }
        // }

        stage('Verify with Ngrok') {
            steps {
                script {
                    // Get architecture and set appropriate ngrok URL
                    def ARCH = sh(returnStdout: true, script: 'uname -m').trim()
                    def NGROK_URL = "https://bin.equinox.io/c/4VmDzA7iaHb/ngrok-stable-linux-${ARCH}.zip"
                    
                    if (ARCH == 'x86_64') {
                        NGROK_URL = "https://bin.equinox.io/c/4VmDzA7iaHb/ngrok-stable-linux-amd64.zip"
                    } else if (ARCH == 'aarch64' || ARCH == 'arm64') {
                        NGROK_URL = "https://bin.equinox.io/c/4VmDzA7iaHb/ngrok-stable-linux-arm64.zip"
                    } else {
                        error("Unsupported architecture: ${ARCH}")
                    }

                    // Get service port
                    def SERVICE_PORT = sh(returnStdout: true, script: """
                        kubectl get svc ${SERVICE_NAME} -n ${NAMESPACE} \
                        -o jsonpath='{.spec.ports[0].nodePort}'
                    """).trim()
                    
                    withEnv(["NGROK_PORT=${SERVICE_PORT}"]) {
                        sh '''
                            # Install ngrok (architecture-specific)
                            echo "Downloading ngrok for ${ARCH}..."
                            curl -s ${NGROK_URL} -o ngrok.zip
                            unzip -o ngrok.zip
                            chmod +x ngrok
                            
                            # Start ngrok with proper path
                            ./ngrok http ${NGROK_PORT} --log=stdout --authtoken=${NGROK_AUTH_TOKEN} > ngrok.log &
                            sleep 10  # Extra time for ngrok to initialize
                            
                            # Get public URL with retries
                            for i in {1..5}; do
                                NGROK_URL=$(curl -s localhost:4040/api/tunnels | jq -r '.tunnels[0].public_url')
                                if [ -n "${NGROK_URL}" ]; then
                                    break
                                fi
                                sleep 5
                            done
                            
                            if [ -z "${NGROK_URL}" ]; then
                                echo "Failed to get ngrok URL"
                                cat ngrok.log
                                exit 1
                            fi
                            
                            echo "Ngrok Public URL: ${NGROK_URL}"
                            
                            # Test the API with retries
                            for i in {1..3}; do
                                if curl -X POST "${NGROK_URL}/predict" \
                                    -H "Content-Type: application/json" \
                                    -d '{"text":"This is a test comment"}'; then
                                    break
                                fi
                                sleep 5
                            done
                            
                            echo "NGROK_URL=${NGROK_URL}" > ngrok.env
                        '''
                    }
                }
            }
            post {
                always {
                    sh '''
                        # Stop ngrok process
                        pkill -f "ngrok http" || true
                        # Clean up
                        rm -f ngrok ngrok.zip || true
                    '''
                    archiveArtifacts artifacts: 'ngrok.log,ngrok.env', fingerprint: true
                }
            }
        }

